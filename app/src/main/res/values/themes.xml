<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Starbucks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/starbucks_green</item>
        <item name="colorPrimaryVariant">@color/starbucks_dark_green</item>
        <item name="colorSecondary">@color/starbucks_gold</item>
        <item name="colorSecondaryVariant">@color/starbucks_dark_gold</item>
        <item name="colorOnSecondary">@color/starbucks_surface</item>
        <item name="android:colorBackground">@color/starbucks_grey</item>
    </style>

    <style name="Theme.Starbucks" parent="Base.Starbucks">
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">#80FFFFFF</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

</resources>

